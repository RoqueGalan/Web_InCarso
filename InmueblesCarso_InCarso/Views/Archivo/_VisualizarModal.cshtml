@model InmueblesCarso_InCarso.Models.Archivo

@{
    string idioma = ViewBag.idioma;
}

@{
    ViewBag.PagName = "Visualizar";
    ViewBag.CtrlName = "Archivo";
    ViewBag.Title = @ViewBag.PagName;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="ventanaModalLabel">
        <span class="glyphicon glyphicon-folder-open"></span>
        <b>@ViewBag.PagName</b>
        <i class="text-muted">@ViewBag.CtrlName</i>
    </h4>
</div>

<div class="modal-body">

    @{
        string NombreDelArchivo = "";
        string NombreText = "";
        string DescripcionText = "";

        if (idioma == "ES")
        {
            NombreDelArchivo = Model.RutaArchivoES;
            NombreText = Model.NombreES;
            DescripcionText = Model.DescripcionES;
        }
        else
        {
            NombreDelArchivo = Model.RutaArchivoEU;
            NombreText = Model.NombreEU;
            DescripcionText = Model.DescripcionEU;

        }

    }

    <h1>@NombreText</h1>
    <p>@DescripcionText</p>
    <p>@Model.FechaPublicacion</p>

    <object data="@Url.Action("GetPDF", new { nombrePDF = NombreDelArchivo })" type="application/pdf" width="100%" height="350em"></object>

</div>

<div class="modal-footer">
    <button class="btn" type="button" data-dismiss="modal">Cerrar</button>
</div>

